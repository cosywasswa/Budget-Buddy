<header class="form-head">
<i class="fas fa-less-than"></i>
<h3>New Payment</h3>
</header>
<div class="new-payment-container">
<%= form_for @payment, url: user_payments_path, method: :post do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="form-group">
    <%= f.label :amount, "Amount" %>
    <%= f.number_field :amount, class: "form-control", required: true %>
  </div>
  
  <div class="form-group">
  <%= f.label :category_ids, "Categories" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
    <div class="form-check">
      <%= cb.check_box(class: "form-check-input") %>
      <%= cb.label(class: "form-check-label") %>
    </div>
  <% end %>
</div>
  
    <div class="form-group-btn">
      <%= f.submit "Save", class: "save-payment" %>
    </div>
  <% end %>
  </div>
  